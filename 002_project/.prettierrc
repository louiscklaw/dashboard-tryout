{
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "printWidth": 100,
  "plugins": [
    "prettier-plugin-sort-json",
    "@ianvs/prettier-plugin-sort-imports"
  ],
  "jsonRecursiveSort": false,
  "jsonSortOrder": "{\"*\": \"lexical\"}",
  "overrides": [
    {
      "files": "src/App.tsx",
      "options": {
        "printWidth": 160
      }
    },
    {
      "files": "src/routes/*",
      "options": {
        "printWidth": 160
      }
    },
    {
      "files": [
        "*.html",
        "legacy/**/*.js"
      ],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
